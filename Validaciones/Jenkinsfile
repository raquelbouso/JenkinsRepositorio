def dia = new Date().getDay()
def dias_letras =
   [1: "Lunes",
    2: "Martes",
    3: "Miercoles",
    4: "Jueves",
    5: "Viernes",
    6: "Sabado",
    7: "Domingo"]
pipeline {
    agent any
    stages {
        stage('Lunes') {
            steps {
		 echo ''
            }
        }
	stage('Martes') {
            steps {
              script {
		println dias_letras[2]
                if (dias_letras[dia] == "Martes") 
                  println new Date()
              }
            }
        }
        stage('Miercoles') {
          steps {
		 echo ''
            }
        }
        stage('Jueves') {
          steps {
		 echo ''
            }
        }
        stage('Viernes') {
          steps {
		script {
			println dias_letras[5]
			if (dias_letras[dia] == "Viernes") {
				def cause = currentBuild.rawBuild.getCause(Cause.UserIdCause)
				if (cause != null) {
    					def user = cause.userId ?: 'anonymous'
    					echo "started by ${user}"
				} else {
   					 echo "started some other way"
				}
			}
		  }
          }
        }
    }
}
