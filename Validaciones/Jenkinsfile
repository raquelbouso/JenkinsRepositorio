def dia = new Date().getDay()
def dias_letras =
   [1: "Lunes",
    2: "Martes",
    3: "Miercoles",
    4: "Jueves",
    5: "Viernes",
    6: "Sabado",
    7: "Domingo"]
pipeline {
    agent any
    stages {
        stage('Lunes') {
            steps {
		println dias_letras[dia]
            }
        }
	stage('Martes') {
            steps {
              script {
		println dias_letras[dia]
                if (dia == 2) 
                  println new Date()
              }
            }
        }
        stage('Miercoles') {
          steps {
		println dias_letras[dia]
            }
        }
        stage('Jueves') {
          steps {
		println dias_letras[dia]
            }
        }
        stage('Viernes') {
          steps {
		script {
			println dias_letras[dia]
		      if (dia == 5)
			println "Raquel Bouso"
		  }
          }
        }
    }
}
